
<% if flash[:cat_errors] %>
  <% flash[:cat_errors].each do |error| %>
    <p style="color:red;"><%= error %></p>
  <% end %>
<% end  %>


<%= form_for @cat do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :softness %>
  <%= f.text_field :softness %>

  <%= f.label :age %>
  <%= f.number_field :age %>

  <%= f.submit  %>
<% end %>