
<div class="form-container">
  <h1>Create an Account</h1>

  <%= form_for @user do |f| %>
    <div class="form-input">
      <%= f.label :user_name %>
      <%= f.text_field :user_name %>
    </div>

    <div class="form-input">
      <%= f.label :password %>
      <%= f.password_field :password %>
    </div>

    <div class="form-input">
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>

    <div class="form-input">
      <%= f.label :age %>
      <%= f.text_field :age %>
    </div>

    <div class="form-input">
      <%= f.label :cats_owned %>
      <%= f.text_field :cats_owned %>
    </div>

    <%= f.submit class: "form-btn"%>
  <% end %>
</div>
